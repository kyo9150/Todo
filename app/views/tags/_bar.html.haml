    %ul.Tags
      - current_user.tags.each do |tag|
        %li.tag
          = link_to  tag_tasks_path(tag),class:"tag-new" do
            = tag.name
          = link_to tag_path(tag.id) ,method: :delete,class:"delete" do
            =icon('fas','times')
    = link_to new_tag_path ,class:"tag-icon" do
      =icon('fas','plus')


