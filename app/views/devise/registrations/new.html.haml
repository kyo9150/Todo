.AccountPage
  .AccountPage__title
    %h2.create アカウント作成
    //= render "devise/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label :name,"名前"
        .FormField__input--normal
          = f.text_field :name, placeholder:"名前",autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :email,"メールアドレス"
        .FormField__input--normal
          = f.email_field :email,placeholder:"メールアドレス"
      .FormField
        .FormField__label--normal
          = f.label :password,"パスワード"
        .FormField__input--normal
          = f.password_field :password,placeholder:"パスワード(英数字8文字以上)", autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :password_confirmation,"パスワード確認"
        .FormField__input--normal
          = f.password_field :password_confirmation,placeholder:"パスワードの確認", autocomplete: "off"
      .actions
        = render "devise/shared/links"
        = f.submit "作成", class: 'button1 UserButton'
       
