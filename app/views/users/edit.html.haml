.AccountPage
  .AccountPage__title
    %h2 アカウントの編集 
    = link_to "トップページに戻る", :back, class: 'button3'
  .AccountPage__form
    = form_for(current_user) do |f|
      .FormField
        .FormField__label--normal
          = f.label :name,"名前"
        .FormField__input--normal
          = f.text_field :name, placeholder:"名前",autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :email,"メールアドレス"
        .FormField__input--normal
          = f.email_field :email,placeholder:"メールアドレス"
      .FormField
        .FormField__label--normal
          = f.label :password,"パスワード"
        .FormField__input--normal
          = f.password_field :password,placeholder:"パスワード(英数字8文字以上)", autocomplete: "off"
      .actions
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'button4'
        = f.submit "更新", class: 'button2 UserButton update'